<h3>{{i18n "gitter.room"}}: {{integration.room}}</h3>
<h3>{{i18n "gitter.webhook"}}: {{integration.webhook}}</h3>

<table>
  <tr>
    <th>{{i18n "gitter.category"}}</th>
    {{#if siteSettings.tagging_enabled}}
      <th>{{i18n "gitter.tags"}}</th>
    {{/if}}
    <th>{{i18n "gitter.filter"}}</th>
    <th></th>
  </tr>

  {{#each integration.filters as |filter|}}
    <tr>
      <td>{{filter.categoryName}}</td>

      {{#if siteSettings.tagging_enabled}}
        <td>{{filter.tags}}</td>
      {{/if}}

      <td>{{filter.filterName}}</td>
      <td>
        {{d-button action="deleteFilter" actionParam=filter icon="trash-o" class="delete btn-danger" title="gitter.delete_rule"}}
      </td>
    </tr>
  {{/each}}

  <tr class="new-filter">
    <td>
      {{category-chooser
        value=editingFilter.category_id
        rootNoneLabel="gitter.choose.all_categories"
        rootNone=true}}
    </td>

    {{#if siteSettings.tagging_enabled}}
      <td>{{tag-chooser tags=editingFilter.tags placeholderKey="gitter.choose.tags"}}</td>
    {{/if}}

    <td>{{combo-box content=filters value=editingFilter.filter}}</td>

    <td>
      {{d-button
        action="saveFilter"
        icon="save"
        class="save btn-primary"
        title="gitter.save_rule"}}
    </td>
  </tr>
</table>

<div class="integration-controls">
  {{d-button
    action="testNotification"
    icon="rocket"
    label="gitter.test_notification"
    disabled=testingNotification}}

  {{d-button
    action="deleteIntegration"
    icon="trash-o"
    class="delete btn-danger"
    label="gitter.delete_integration"}}
</div>

